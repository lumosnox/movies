            	<item repeat="0-1">
                	<one-of>
                        <item>i wouldn't </item>
                        <item>i don't want to</item>
                        <item>thank you</item>
                        <item>thanks</item>
                        <item><ruleref uri="#no"/></item>
                    </one-of>
				</item>
			</item>-->
       </one-of>
	</rule>
	
    <rule id="initialChoice">
        <one-of>
            <item>movie</item>
            <item>series</item>
            <item>tv series</item>
        </one-of>           
    </rule>
    
    <rule id="genre">
        <one-of>
            <item>comedy</item> 
            <item>horror</item>
            <item>action</item>
            <item>adventure</item>
            <item>fantasy</item>
            <item>animation</item>
            <item>crime</item>
            <item>thriller</item>
            <item>drama</item>
        </one-of>           
    </rule>	    	
    
    <rule id="keyword">
        <one-of>
            <item>cars</item>
            <item>explosions</item>
        </one-of>           
    </rule>	    
  <rule id="idontknow">
  	<one-of>
  		<item>I don't know </item>
  		<item>I do not know </item>
  	</one-of>
  </rule>
  
	<rule id="yes">
		<one-of>
			<item>yes</item>
	        <item>yes I do</item>
	        <item>sure</item>
	        <item>yeah</item>
	        <item>of course</item>
	        <item>okay</item>
	   </one-of>
	</rule>

	<rule id="no">
		<one-of>
			<item>no</item>
            <item>no way</item>
            <item>nope</item>
            <item>not really</item>
            <item>I don't think so</item>
        </one-of>
  </rule>
  
</grammar>
